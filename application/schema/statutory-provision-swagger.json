{
    "swagger": "2.0",
    "info": {
        "title": "Local Land Charge API",
        "description": "Land Registry Local Land Charge API",
        "version": "0.0.1"
    },
    "host": "statutory_provision",
    "schemes": [
        "https"
    ],
    "basePath": "/api.landregistry.gov.uk/",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/records/": {
            "post": {
                "summary": "Add a new Statutory Provision",
                "operationId": "addStatutoryProvision",
                "description": "Add a Statutory Provision to the Statutory Provision Register",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "text/plain"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Statutory-Provision"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "URL to the GET endpoint for the Statutory Provision is returned on successful creation.\n",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request due to invalid schema. Response will include 1 or more schema errors\n",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/record/{primary_id}": {
            "get": {
                "summary": "Get the Statutory Provision record",
                "description": "The Statutory Provision endpoint returns details of a specific Statutory Provision record based on the unique primary id.\n",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "primary_id",
                        "in": "path",
                        "description": "Unique reference of the Statutory Provision record.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "StatutoryProvision"
                ],
                "responses": {
                    "200": {
                        "description": "A specific Statutory Provision is returned",
                        "schema": {
                            "$ref": "#/definitions/Statutory-Provision"
                        }
                    },
                    "404": {
                        "description": "Statutory Provision not found",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            },
            "put": {
                "summary": "Update an existing Statutory Provision",
                "operationId": "updateStatutoryProvision",
                "description": "Update an existing Statutory Provision oo the Statutory Provision Register",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "text/plain"
                ],
                "parameters": [
                    {
                        "name": "primary_id",
                        "in": "path",
                        "description": "Unique reference of the Statutory Provision record.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Statutory-Provision"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "URL to the GET endpoint for the Statutory Provision is returned on successful creation.\n",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request due to invalid schema. Response will include 1 or more schema errors\n",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Statutory-Provision": {
            "type": "object",
            "required": [
                "text"
            ],
            "properties": {
                "statutory-provision": {
                    "type": "string",
                    "description": "NOTE: Unique indentifier for this charge. Do not provide when creating a charge (POST request). Only required for PUT requests"
                },
                "text": {
                    "description": "The legal provisions which give authority to Local Land Charges.",
                    "type": "string",
                    "pattern": "\\S+"
                },
                "archived": {
                    "description": "Boolean indicator to indicate whether the record has been archived",
                    "type": "boolean"
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}