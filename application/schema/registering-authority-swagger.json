{
    "swagger": "2.0",
    "info": {
        "title": "Local Land Charge API",
        "description": "Land Registry Local Land Charge API",
        "version": "0.0.1"
    },
    "host": "llc-registering-authority",
    "schemes": [
        "https"
    ],
    "basePath": "/api.landregistry.gov.uk/",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/records/": {
            "post": {
                "summary": "Add a new Registering Authority",
                "operationId": "addRegisteringAuthority",
                "description": "Add a Registering Authority to the Registering Authority Register",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "text/plain"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Registering-Authority"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "URL to the GET endpoint for the Registering Authority is returned on successful creation.\n",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request due to invalid schema. Response will include 1 or more schema errors\n",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/record/{primary_id}": {
            "get": {
                "summary": "Get the Registering Authority record",
                "description": "The Registering Authority endpoint returns details of a specific Registering Authority record based on the unique primary id.\n",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "primary_id",
                        "in": "path",
                        "description": "Unique reference of the Registering Authority record.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "RegisteringAuthority"
                ],
                "responses": {
                    "200": {
                        "description": "A specific Registering Authority is returned",
                        "schema": {
                            "$ref": "#/definitions/Registering-Authority"
                        }
                    },
                    "404": {
                        "description": "Registering Authority not found",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            },
            "put": {
                "summary": "Update an existing Registering Authority",
                "operationId": "updateRegisteringAuthority",
                "description": "Update an existing Registering Authority on the Registering Authority Register",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "text/plain"
                ],
                "parameters": [
                    {
                        "name": "primary_id",
                        "in": "path",
                        "description": "Unique reference of the Registering Authority record.",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Registering-Authority"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "URL to the GET endpoint for the Registering Authority is returned on successful creation.\n",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request due to invalid schema. Response will include 1 or more schema errors\n",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Registering-Authority": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "llc-registering-authority": {
                    "type": "string",
                    "description": "NOTE: Unique indentifier for this charge. Do not provide when creating a charge (POST request). Only required for PUT requests"
                },
                "name": {
                    "description": "The name of the Local Authority",
                    "type": "string",
                    "pattern": "\\S+"
                },
                "archived": {
                    "description": "Boolean indicator to indicate whether the record has been archived",
                    "type": "boolean"
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}